<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.murilojatoba.frasedodia.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#de7905"
        android:orientation="vertical"
        android:padding="@dimen/margem"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnNovaFrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_frase_dia" />

        <TextView
            android:id="@+id/txtNovaFrase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margem"
            android:layout_weight="1"
            android:text="Clique acima para gerar frases!"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/texto_nova_frase"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
