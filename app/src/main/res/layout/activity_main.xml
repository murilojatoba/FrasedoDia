<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.murilojatoba.frasedodia.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="#de7905"
        android:padding="@dimen/margem_interna"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnNovaFrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/texto_frase_dia" />

        <TextView
            android:id="@+id/txtNovaFrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNovaFrase"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Clique acima para gerar frases!"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@android:color/background_light"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
